<div class="signup">
  <div class="container">
    <div class="form">
      <h1>Sign Up</h1>
      <%= form_for(@user) do |f| %>
        <%= f.text_field :username, :placeholder => "Username" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <%= f.submit "Create an account", class: "btn-submit" %>
      <% end %>
    </div>
  </div>
</div>